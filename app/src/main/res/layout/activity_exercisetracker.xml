<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow android:paddingTop="20dp">

            <ImageView
                android:paddingLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/arrow1" />

            <TextView
                android:id="@+id/currentDate"
                android:text="Friday, Dec 9"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"

                android:layout_width="match_parent" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:rotation="180"
                android:id="@+id/arrow2" />

        </TableRow>

        <TableRow android:paddingTop="10dp">

            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_directions_walk_black_24dp"
                android:id="@+id/imageView5" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/walkingTime"
                android:text="00:00:00"
                android:textSize="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow android:paddingTop="10dp">
            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_directions_run_black_24dp"
                android:id="@+id/imageView6" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/runningTime"
                android:text="00:00:00"
                android:textSize="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_directions_bike_black_24dp"
                android:id="@+id/imageView7" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bikingTime"
                android:text="00:00:00"
                android:textSize="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <TextView
        android:text="00:00:00"
        android:id="@+id/timer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="99dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_marginBottom="31dp"
        android:background="@android:color/transparent"
        android:id="@+id/trackbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>